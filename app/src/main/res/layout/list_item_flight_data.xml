<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_marginBottom="16dp"
              android:layout_marginTop="16dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:weightSum="5"
              android:gravity="center_vertical"
              android:layout_height="100dp">
    <ImageView android:layout_width="0dp"
               android:importantForAccessibility="no"
               android:layout_weight="2"
               android:id="@+id/airline_logo"
               android:layout_height="45dp"/>
    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="3"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <TextView android:layout_width="match_parent"
                  android:textStyle="bold"
                  tools:text="China Southern Airlines"
                  android:id="@+id/txt_airline_name"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:id="@+id/txt_inbound_flight_duration"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:id="@+id/txt_outbound_flight_duration"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:id="@+id/txt_stops"
                  tools:text="Stops: 2"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:id="@+id/txt_cost"
                  tools:text="Cost: $2954"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>